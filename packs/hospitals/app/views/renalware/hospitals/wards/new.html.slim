= within_admin_layout(title: "New", breadcrumbs: [ \
      breadcrumb_for(ward.hospital_unit.name, hospitals.units_path),
      breadcrumb_for("Wards", hospitals.unit_wards_path(ward.hospital_unit)) \
  ]) do

  = simple_form_for ward,
        url: hospitals.unit_wards_path(unit_id: ward.hospital_unit.id),
        html: { autocomplete: "off" },
        as: :ward,
        wrapper: "horizontal_form" do |f|

      = render "form", f: f
