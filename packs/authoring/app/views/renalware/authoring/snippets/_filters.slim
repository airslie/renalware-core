= search_form_for(search,
                  url: authoring.snippets_path,
                  remote: remote,
                  class: "fn-form",
                  id: "snippet-search-form",
                  data: { turbo: true,
                          turbo_frame: "snippet-search",
                          turbo_advance: true,
                          controller: "form",
                          action: "input->form#submit" } ) do |f|

  = hidden_field_tag :author, author
  = hidden_field_tag :in_dialog, in_dialog

  .mb-2
    .relative.mt-2.rounded-md.shadow-sm
      = f.search_field(:title_or_author_given_name_or_author_family_name_cont,
                       placeholder: t(".search_placeholder"),
                       class: "no-clear-icon border-0 py-1.5 ring-inset ring-gray-300 pr-10 placeholder:text-gray-400",
                       autofocus: true)
      .pointer-events-none.absolute.inset-y-0.right-0.flex.items-center.pr-3
        = inline_icon "search", size: :md
