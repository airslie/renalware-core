= within_new_admin_layout(title: "Pathology Code Group <code>#{group.name}</code>".html_safe) do

  = simple_form_for(group,
                    url: renalware.pathology_code_group_path(group),
                    method: :patch,
                    as: :code_group) do |f|
    = f.input :description
    = f.submit t("btn.save"), class: :button
