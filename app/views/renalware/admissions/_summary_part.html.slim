- view_all_url = admissions_admissions_path(query: { term: summary_part.patient_nhs_number })

#admissions.summary-part--admissions
  article
    header
      h2
        = link_to "#{t('titles.admissions')} (#{summary_part.admissions_count})", view_all_url
      ul
        li= link_to t("btn.view_all"), view_all_url, class: "button"

    - if summary_part.admissions.any?
      = render "renalware/admissions/admissions/table",
              admissions: summary_part.admissions,
              compact: true
