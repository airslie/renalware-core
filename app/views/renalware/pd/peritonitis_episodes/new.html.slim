= within_patient_layout(title: "New Peritonitis Episode",
                        breadcrumbs: pd_summary_breadcrumb(patient),
                        **local_assigns) do

  = render "renalware/shared/errors", model: peritonitis_episode

  = simple_form_for [patient, peritonitis_episode], wrapper: :horizontal_form do |f|

    = render "renalware/pd/peritonitis_episodes/fields", local_assigns.merge!(f: f)

    = submit_tag "Save", class: "button"
    '  or
    = link_to t("btn.cancel"), patient_pd_dashboard_path(patient)
