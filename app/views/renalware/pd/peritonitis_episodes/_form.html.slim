= simple_form_for [patient, peritonitis_episode],
                  html: { class: [local_assigns[:form_class], "fn-form"].compact.join(" ") },
                  remote: true,
                  wrapper: :horizontal_form do |f|

  = render "fields", local_assigns.merge!(f: f)

  .row
    .large-offset-3.large-7.columns
      = f.button :submit, "Save", class: :tiny
      '  or
      = link_to t("btn.cancel"),
                patient_pd_peritonitis_episode_path(patient, peritonitis_episode),
                remote: true
