.hd-session-form-actions
  = f.button :submit,
              value: t(".save"),
              data: { disable_with: t(".save_disable_with") },
              class: "button secondary"
  | &nbsp;
  = f.button :submit,
            as: :ssdsdsd,
            name: "signoff",
            value: t(".signoff"),
            data: { disable_with: t(".signoff_disable_with") }
  - if policy(session).destroy?
    | &nbsp;
    = link_to(t("btn.delete"), patient_hd_session_path(patient, session),
              data: { confirm: t(".delete_confirmation") },
              method: :delete,
              class: "button alert")
  | &nbsp;
  '  or
  = link_to t("btn.cancel"), back_path
