= simple_form_for(group,
                  as: :group,
                  url: url,
                  wrapper: :horizontal_form,
                  html: { autocomplete: "off" }) do |f|
  = f.input :name, wrapper: :horizontal_small, autofocus: true
  = f.input :description, as: :text, wrapper: :horizontal_large
  = f.input :letter_electronic_ccs,
            as: :boolean,
            wrapper: :horizontal_small

  = f.association :users,
                  collection: Renalware::User.ordered,
                  wrapper: :horizontal_large,
                  input_html: { data: { controller: "slimselect" } }

  = save_or_cancel(form: f, back_path: renalware.user_groups_path)
