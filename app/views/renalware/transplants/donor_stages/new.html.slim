= within_patient_layout(title: "Update Donor Stage",
                        breadcrumbs: donor_summary_breadcrumb(patient)) do

  = simple_form_for stage,
                    url: patient_transplants_donor_stage_path(patient),
                    html: { autocomplete: :off },
                    as: :donor_stage,
                    wrapper: "horizontal_form" do |f|

    = f.association :stage_position, wrapper: :horizontal_small
    = f.association :stage_status, wrapper: :horizontal_small

    = f.input :started_on,
              as: :date_picker,
              wrapper: :horizontal_datepicker

    = f.input :notes,
              input_html: { rows: 6 },
              wrapper: :horizontal_medium

    = f.submit t("btn.save"), class: "button"
    '  or
    = link_to t("btn.cancel"), patient_transplants_donor_dashboard_path(patient)
